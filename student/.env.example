# Database (PostgreSQL / Neon)
# Example: set these in Render's environment variables or your Dockerfile
DB_URL=jdbc:postgresql://<your-neon-pooler>.us-east-1.aws.neon.tech/neondb?sslmode=require&channelBinding=require
DB_USER=neondb_owner
DB_PASSWORD=replace_with_password
DB_DRIVER=org.postgresql.Driver

# Application
APP_PORT=8080
SECRET_KEY=replace_with_a_random_secret

# Admin credentials (optional - keep secure and rotate)
ADMIN_USER=iamneo
ADMIN_PASS=iamneo123
